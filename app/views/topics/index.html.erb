<h1>All Topics</h1>
<% if policy(Topic.new).create? %>
   <%= link_to "New Topic", new_post_path, class: 'btn btn-success' %>
<% end %>
<% @topics.each do |topic| %>
<div class="media">
  <div class="media-body">
    <h4 class="media-heading">
      <%= link_to topic.name, topic %>
    </h4>
    <small>
    <%= topic.description %>
    </small>
  </div>
</div>
<% end %>
